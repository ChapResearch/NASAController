<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Config_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="58dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="58dp"
    android:background="@color/steel_blue">

    <EditText
        android:id="@+id/controllerName_field"
        android:layout_width="319dp"
        android:layout_height="52dp"
        android:layout_marginTop="44dp"
        android:background="@color/pastel_gray"
        android:ems="10"
        android:fontFamily="@font/lato_regular"
        android:hint="Controller Name"
        android:inputType="textCapWords"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/year_field"
        android:layout_width="319dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:background="@color/pastel_gray"
        android:ems="10"
        android:fontFamily="@font/lato_regular"
        android:hint="Year"
        android:inputType="number"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/controllerName_field" />

    <EditText
        android:id="@+id/competition_field"
        android:layout_width="319dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:background="@color/pastel_gray"
        android:ems="10"
        android:fontFamily="@font/lato_regular"
        android:hint="Competition"
        android:inputType="textCapWords"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year_field" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="319dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:background="@color/pastel_gray"
        android:ems="10"
        android:fontFamily="@font/lato_regular"
        android:hint="Password"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/competition_field" />

</android.support.constraint.ConstraintLayout>
